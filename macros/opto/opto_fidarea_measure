$port = ''
shell('echo $OPTO_PORT'):$port
$portVal = 30811
if ($port <> '') then
  format($port,5,0):$portVal
endif

dfid

clear
fidarea
  
fidarea:$area
 
// Send area value back to optimizer app

write('net', '127.0.0.1', $portVal, '%.5f', $area)

return
