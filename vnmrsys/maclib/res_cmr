"macro res_cmr"
" res_cmr  -displays line widths at half-height, 3.125% and 0.55% levels"
peak(sp,wp+sp):$ht,$cr
cr=$cr
ds
dres(cr,.50):$lw
write('graphics',98,wc2max-20,'50%% linewidth %6.2f',$lw)
dres(cr,.03125):$lw
write('graphics',95,wc2max-30,'3.125%% linewidth %6.2f',$lw)
dres(cr,.0055):$lw
write('graphics',95,wc2max-40,'0.55%% linewidth %6.2f',$lw)
